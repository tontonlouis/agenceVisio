<div class="col-4">
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">
				<a href="{{ path('property.show', {id: property.id}) }}">{{ property.title }}</a>
			</h5>
			<p class="card-text">{{ property.city }}
				({{ property.zipcode }})</p>
			<div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.priceFormatted }}</div>
		</div>
	</div>
</div>
